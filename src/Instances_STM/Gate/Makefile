# Makefile Commander

## Import config
ROOTDIR=$(realpath ../../../)
ifndef CONFIG_SOURCED

CFG_MAKE=$(ROOTDIR)/Config.Makefile
include $(CFG_MAKE)

endif

## Module files
SRC_BASE=gate
MODULE_DIRECTORY=$(MODULE_INSTANCES_STATEMACHINE)/Gate

## Side module info
HAS_SIDEMOD=false

## Dependencies
DEP_STATEMACHINE=$(MODOBJ_STATEMACHINE) $(MODOBJ_LIST)
DEP_GATE_TRANSITIONS=$(DEP_STATEMACHINE) $(MODOBJ_INS_GATE_TRANSITION)
DEP_GATE_STATE=$(MODOBJ_INS_GATE_CONDITION) $(MODOBJ_INS_GATE_STATE)
DEP_GATE=$(DEP_GATE_STATE)  $(DEP_GATE_TRANSITIONS) $(MODOBJ_INS_GATE_BODY)
DEP_UTILS=$(MODOBJ_TESTUTILS) $(MODOBJ_STRUTILS) $(MODOBJ_CFGUTILS)
DEP_MOD=$(DEP_GATE) $(DEP_UTILS)

# System
include $(RULES_MAKE)
